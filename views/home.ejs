<!DOCTYPE html>
<html lang="en">
  <head>
      <%- include("include/head", {title: "TaskForce: Home"}); %>
  </head>

  <body style="background-color: #282c34">
    <%- include("include/navbar"); %>
    <div class="container-fluid" style="background-color: white">
      <div class="row">
        <div class="container mt-5" style="min-height:70vh">
          <%- messages('include/message', locals) %>
          <div class="row py-5">
            <div class="col">
              <h1>Welcome to TaskForce.</h1>
            </div>
          </div>
          <div class="row">
            <div class="col-6">
              <h3>Latest Tasks</h3>
              <table class="table">
                <thead>
                  <th>Task</th>
                  <th>Description</th>
                </thead>
                <tbody>
                  <% result.rows.forEach((item)=>{%>
                    <tr>
                      <td><%=item.taskname%></td>
                      <td><%=item.description%></td>
                    </tr>
                  <% }); %>
                </tbody>
              </table>
            </div>
          </div>
        </div>
      </div>
    </div>
    <%- include("include/footer"); %>
  </body>
</html>
