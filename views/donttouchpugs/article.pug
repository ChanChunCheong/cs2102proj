extends layout 

block content 
    
    h1= article.title
    h5 written by #{author}
    p= article.body

    hr 
     
    if user.user_id == article.author
        a.btn.btn-default(href='/articles/edit/'+article.article_id) Edit
        a.btn.btn-danger.delete-article(href='#', data-id=article.article_id) Delete