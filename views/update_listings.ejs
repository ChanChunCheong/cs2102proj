<!DOCTYPE html>
<html lang="en">

<head>
    <%- include("include/head", {title: "Update Listing"}); %>

</head>

  <body style="background-color: #282c34">
      <%- include("include/navbar"); %>
      <div class="container-fluid" style="background-color: white">
        <div class="row">
          <div class="container mt-5" style="min-height:70vh">
            <%- messages('include/message', locals) %>
            <div class="row">
              <div class="col">
              <h1 class="text-center">Update Listing Details</h1>
              <br/>
              <form method="POST" , action="/taskRequesters/updateListings/<%= task[0].taskid %>">
                <div class="form-group row">
                    <label for="rating" class="col-sm-2 col-form-label py-3">Description:</label>
                    <div class="col-sm-10 py-3">
                      <textarea class="form-control" name="newDescription"></textarea>
                    </div>
                    <br/>

                </div>
                <div class="form-group row">
                    <label for="rating" class="col-sm-2 col-form-label py-3">Task Start Date / Time:</label>
                    <div class="col-sm-10 py-3">
                      <input type="datetime-local" name="newTaskStartDateTime"> 
                    </div>
                </div>
                <br/>

                <div class="form-group row">
                    <label for="rating" class="col-sm-2 col-form-label py-3">Task End Date / Time:</label>
                    <div class="col-sm-10 py-3">
                      <input type="datetime-local" name="newTaskEndDateTime"> 
                    </div>
                </div>
                <br/>

                <div class="form-group row">
                    <label for="rating" class="col-sm-2 col-form-label py-3">Bidding Deadline:</label>
                    <div class="col-sm-10 py-3">
                      <input type="datetime-local" name="newDeadline">
                    </div>
                </div>
                <br/>

                <div class="text-center">
                    <input class="btn btn-primary" type="submit" value="Submit" />
                </div>
                <br/><br/>
              </form>
            </div>
          </div>
        </div>
      </div>
    </div>
  </body>

</html>