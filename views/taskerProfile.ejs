<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include("include/head", {title: "Tasker Profile"}); %>
    <script>
    $('#myModal').on('shown.bs.modal', function () {
      $('#myInput').trigger('focus') })
    </script>

  </head>
  <body style="background-color: #282c34">
    <%- include("include/navbar"); %>
    <div class="container-fluid pt-5" style="background-color: white;background-image:url('/images/woman-boxes.jpg');background-repeat: no-repeat;background-position:center;background-size:cover;">
        <%- messages('include/message', locals) %>
      <div class="row">
        <div class="container" style="min-height:70vh">
          <div class="row">
            <div class="col">
              <h1><i class="fas fa-home"></i>&nbsp;&nbsp; Tasker</h1>
            </div>
          </div>
          <div class="row mt-3">
              <%- include("include/tasker_sidebar"); %>
            <div class="col-9 pl-5">
              <%- include("include/userProfile"); %><br/>
              <i class="far fa-laugh-squint"></i>&nbsp;Tasker Rating&nbsp;:&nbsp; 
              <span style="font-size:1em">
                  <% for(var y=0;y<5;y++){%>
                      <i class="fa<%=(y<rating) ? "s" : "r";%> fa-star" style="color:#ffc700"></i>
                  <%}%> 
              </span><br/><br/>
              <i class="far fa-check-circle"></i>&nbsp;Total Tasks Done&nbsp;:&nbsp;<b><%=num%> </b><br/><br/>
              <i class="far fa-calendar-minus"></i>&nbsp; Date Joined&nbsp;:&nbsp;<br/>

              <br/>
              
            </div>
          </div>
        </div>
      </div>
    </div>
    <%- include("include/footer"); %>
  </body>
</html>
