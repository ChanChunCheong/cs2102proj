<!DOCTYPE html>
<html lang="en">
  <head>
      <%- include("include/head", {title: "Bid Accepted"}); %>
  </head>
<!-- {tasker_info: result.rows[0], tasker_skills: result2.rows, tasker_reviews: result3.rows}); -->
  <body style="background-color: #282c34">
    <%- include("include/navbar"); %>
    <div class="container-fluid" style="background-color: white">
      <div class="row">
        <div class="container mt-5" style="min-height:70vh">
          <%- messages('include/message', locals) %>
          <div class="row">
            <div class="col text-center">
              <h1><i class="fas fa-check-circle" style="color: green"></i></h1><br/>
              <h1><mark><%=result.name%></mark>'s Bid for Task: <mark><%=result.taskname%></mark> Accepted!</h1>
            </div>
          </div>
          <div class="row justify-content-center">
            <div class="col-3 text-right">
              Task Name:
            </div>
            <div class="col-3 text-left">
              <%=result.taskname%>
            </div>
          </div>
          <div class="row justify-content-center">
            <div class="col-3 text-right">
              Description
            </div>
            <div class="col-3 text-left">
              <%=result.description%>
            </div>
          </div>
          <div class="row justify-content-center">
            <div class="col-3 text-right">
              Start Date/Time
            </div>
            <div class="col-3 text-left">
              <%=(result.taskstartdatetime).toString().substring(0,24)%>
            </div>
          </div>
          <div class="row justify-content-center">
            <div class="col-3 text-right">
              End Time:
            </div>
            <div class="col-3 text-left">
              <%=result.taskendtime%>
            </div>
          </div>
          <div class="row justify-content-center">
            <div class="col-3 text-right">
              Bid
            </div>
            <div class="col-3 text-left">
              $<%=result.bidprice%>/hour
            </div>
          </div>
          <div class="row">
            <div class="col text-center">
              <a href="../../../../../../" class="btn btn-danger">Back</a>
            </div>
          </div>
        </div>
      </div>
    </div>
    <%- include("include/footer"); %>
  </body>
</html>
